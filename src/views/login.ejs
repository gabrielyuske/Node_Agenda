
<%- include("includes/head") %>
<%- include("includes/nav") %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

            <div class="col-lg-8 my-4"></div>
                <h1 class="text-center">Criar conta ou Logar</h1>
                <p class="text-center lead">Faca login ou crie sua conta</p>

                <%- include('includes/messages'); %>

            <div class="row">
                <div class="col-lg">
                    <h4> Faca seu cadastro </h4>
                    <p>Se voce nao tiver uma conta preencha o formulario abaixo

                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                            <label>Seu e-mail</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                    </form>
                </div>

                <div class="col-lg">
                    <h4> Faca seu Login </h4>
                    <p>Se voce ja tiver uma conta faca login abaixo</p>

                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" id="" aria-describedby="emailHelp" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" id="" placeholder="Senha">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>

            </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("includes/footer") %>